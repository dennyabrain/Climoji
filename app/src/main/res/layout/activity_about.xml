<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="20dp"
    android:orientation="vertical"
    android:gravity="center_vertical"
    tools:context="dennymades.space.climoji.AboutActivity">

    <ImageView android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        android:src="@drawable/ic_about"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:text="Climoji is a set of emoji that visually and efficiently expresses the causes of climate change. It is a visual vocabulary that aids and encourages conversations around environmental concerns and brings it into usable pop-visual language system"
        />


</LinearLayout>
